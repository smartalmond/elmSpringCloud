<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.elm.cart.mapper.CartMapper">

    <resultMap id="cartResultMap" type="com.elm.cart.pojo.Cart">
        <id column="cartId" property="cartId"/>
        <result column="food.foodId" property="foodId"/>
        <result column="business.businessId" property="businessId"/>
        <result column="user.userId" property="userId"/>
        <result column="quantity" property="quantity"/>
        <association property="food" javaType="com.elm.cart.pojo.Food"
                     select="com.elm.cart.mapper.FoodMapper.getFoodById" column="foodId"/>
        <association property="business" javaType="com.elm.cart.pojo.Business"
                     select="com.elm.cart.mapper.BusinessMapper.getBusinessById"
                     column="businessId"/>
    </resultMap>

    <select id="listCart" parameterType="map" resultMap="cartResultMap">
        select * from cart
        <where>
            userId=#{userId}
            <if test="businessId!=null and businessId!='' ">
                and businessId=#{businessId}
            </if>
        </where>
        order by cartId
    </select>

    <delete id="removeCart" parameterType="com.elm.cart.pojo.Cart">
        delete from cart
        <where>
            userId=#{userId} and businessId=#{businessId}
            <if test="foodId!=null and foodId!='' ">
                and foodId=#{foodId}
            </if>
        </where>
    </delete>
</mapper>